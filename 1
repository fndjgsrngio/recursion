package com.company;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int[] arr = new int[n];
        for(int i=0; i<n; i++) {
            arr[i] = sc.nextInt();
        }
        System.out.println(minimum(arr, n));
    }
            public static int minimum(int[] arr,int n){

                int min = arr[0];
                for(int i=1;i<arr.length;i++){
                    if(arr[i] < min){
                        min = arr[i];
                    }

                }
                return min;

            }

}
